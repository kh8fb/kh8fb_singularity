BootStrap: debootstrap
OSVersion: buster
MirrorURL: http://ftp.us.debian.org/debian/

%setup
	# touch all possible files that can be downloaded
	mkdir ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app
	mkdir ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models

%post
	#install all necessary python material, remove unnecessary apps
	apt-get update && apt-get install -y \
	python3 \
	python3-pip \
	git-all \

	pip3 install --upgrade pip
	# get the intermediate gradients and server git repos
	git clone https://github.com/kh8fb/intermediate-gradients.git
	git clone https://github.com/kh8fb/int-gradients-server.git
	cd intermediate-gradients
	pip3 install -e .
	cd ../int-gradients-server
	pip3 install -r requirements.txt
	pip3 install -e .
	# download the google drive file
	pip3 install gdown


%labels
	Author kh8fb@virginia.edu
	Version v0.0.1

##################
# download_model #
##################

%apphelp download_model
	 This is an application that you can use to download the model file for a specific application.  The application will not work if the model has not been downloaded yet.  Run this with `sudo singularity run -w --app download_model int_gradients_server.sif model_name` where model_name is one of bert_imdb, bert_yelp, bert_sst_sentences, bert_sst_finetuned, xlnet_base_imdb, xlnet_base_yelp, xlnet_base_sst_sentences, xlnet_base_sst_finetuned, xlnet_large_imdb, xlnet_large_yelp, xlnet_large_sst_sentences, or xlnet_large_sst_finetuned.

%apprun download_model
	if [ "$1" = "bert_imdb" ]; then
	     gdown https://drive.google.com/uc?id=1R_7SVjETSHs74ff2ita7PrahcFbM1gZa -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/bert_imdb_model_file.pth
	elif [ "$1" = "bert_yelp" ]; then
	     gdown https://drive.google.com/uc?id=1h7jmjlPl6KPqVHhQo9FnVpZtg2h-14-7 -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/bert_yelp_model_file.pth
	elif [ "$1" = "bert_sst_sentences" ]; then
	     gdown https://drive.google.com/uc?id=1XSeRl5dHCAabB-gTbhYiZVO3JsA4OixJ -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/bert_sst_sentences_model_file.pth	     
	elif [ "$1" = "bert_sst_finetuned" ]; then
	     gdown https://drive.google.com/uc?id=19gRGkWKA4-pOH-TTQG5wEmA2wwtOOFoi -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/bert_sst_finetuned_model_file.pth
	elif [ "$1" = "xlnet_base_imdb" ]; then
	     gdown https://drive.google.com/uc?id=1mTfHTA5kdlQLFRtLGZPRTLHTB8nNL-du -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/xlnet_base_imdb_model_file.pth
	elif [ "$1" = "xlnet_base_yelp" ]; then
	     gdown https://drive.google.com/uc?id=1M63fFr4sAhrZ-mNdIJdU8tRUxhzkeQ7j -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/xlnet_base_yelp_model_file.pth
	elif [ "$1" = "xlnet_base_sst_sentences" ]; then
	     gdown https://drive.google.com/uc?id=18fr8RLFiakDrFf24Dxsw88Uypqfp0B_b -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/xlnet_base_sst_sentences_model_file.pth
	elif [ "$1" = "xlnet_base_sst_finetuned" ]; then
	     gdown https://drive.google.com/uc?id=1K7u0nGi5Ecc8g4A8KEgngDpRs6X5n0Dm -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/xlnet_base_sst_finetuned_model_file.pth
	elif [ "$1" = "xlnet_large_imdb" ]; then
	     gdown https://drive.google.com/uc?id=1B11ko7Dzam3ZxaHE_GWhD_uMLK5ZNGpO -O ${SINGULARITY_ROOTFS}/opt/int_gradients_server_app/models/xlnet_large_imdb_model_file.pth
	elif [ "$1" = "xlnet_large_yelp" ]; then
